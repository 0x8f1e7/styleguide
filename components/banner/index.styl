
/*==========  Banner  ==========*/
.banner
  color: white;
  text-align: center
  padding-top: 60px;
  padding-bottom: 60px;
  margin-bottom: 50px;
  position: relative;
  overflow: hidden
  background-color: #14204d;
  background: linear-gradient(180deg, color_blue 0%, color_blue_light 200%); /* W3C */
  padding:80px 0;

  h1
    color: white;
    font-size: 2.5rem;
    font-weight: 300
    margin-bottom: 0;

  p
    max-width: 580px;
    font-size: 1.4rem;
    margin: auto;
    margin-top: 10px;
    color: rgba(255,255,255,.8);

  i
    font-size: 50px;
    -webkit-animation: icon_banner 1s;
    position: relative;

  a 
    color: color_blue_light;
    font-weight: bold
  .btn
    margin-top: 10px;

  em
    display: block
    font-size: 12px;
    margin-top: 4px;
    letter-spacing: 1px;


  .icon-banner
    border: 2px solid white;
    border-radius: 100px;
    line-height: 90px;
    width: 80px;
    height: 80px;
    font-size: 36px;
    display: inline-block

@keyframes icon_banner
  from
    top: -100px;
    opacity: 0;
  to
    opacity: 1;
    top: 0;


@media screen and (min-width: 992px)
  .header-dark .banner
    padding-top:160px;

@media screen and (max-width: 660px)
  .banner
    padding: 20px 0;

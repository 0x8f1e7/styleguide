@import 'auth0-styleguide-core/src/vars'
@import 'auth0-styleguide-core/src/mixins'

.component-editor
  background-color rgba(black, 0.25)
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 100

  .component-editor-content
    position relative
    border-radius 3px
    background-color white
    margin 0 auto
    margin-top 40px
    width calc(100% - 80px)
    height calc(100% - 80px)
    box-shadow 0 0 50px 0px rgba(0, 0, 0, 0.2)

    &.center .playgroundPreview
      display flex
      align-items center
      justify-content center

  .component-editor-header
    position relative
    width 100%
    background-color rgba(black, 0.1)
    color white
    height 50px

  .playground
    display flex
    flex-direction column
    justify-content space-between
    height calc(100% - 50px)
    position relative
    overflow-y auto

    > .playgroundCode
      order 1
      flex 1

      .ReactCodeMirror
        height 100%
        background-color #242f35

      .CodeMirror.CodeMirror-wrap
        height 100%
        color white
        padding 20px
        border-radius 0 0 3px 3px

    > .playgroundPreview
      order 0
      flex 1
      min-height 200px

    .playgroundError
      position absolute
      top 0
      left 0
      right 0
      background-color red
      padding 10px 18px
      color white

  .component-editor-title
    display inline-block
    font-size 16px
    margin 0
    line-height 50px
    padding 0 30px

  .close-btn
    float right
    height 50px
    width 50px
    background-color rgba(black, 0.1)
    border 0

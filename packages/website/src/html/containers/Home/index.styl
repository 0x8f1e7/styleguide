@import '../../../../../core/src/vars'
@import '../../../../../core/src/mixins'

.auth0-html-styleguide .home-section
  background: $bg-color-black
  height:100vh;
  display: flex;
  align-items: center;
  flex:1;
  padding: 20px;

  +breakpoint("tablet")
    padding-left: 100px;

  .splash-intro

    .section-title
      font-size: 40px;
      margin: 30px 0;

    .section-description
      font-size: $font-size-base;
      color: $color-text-contrast-light;
      margin-bottom: 50px;

    .btn
      margin-right: 30px;
      margin-bottom: $padding-large-horizontal;
      display: block

      &.btn-default
        background: white;
        animation-delay: 3.6s

      +breakpoint('tablet')
        display: inline-block;

    .lines
      margin-bottom: $padding-base-horizontal * 2;

      span
        height: 4px;
        background: $color-red;
        display: inline-block;
        width: 47px;
        margin-right: 2px;

        &.blue
          background-color: $color-blue;

        &.blue-light
          background-color: $color-blue-light;

        &.gray
          background-color: $color-gray
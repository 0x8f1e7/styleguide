.component-editor
  background-color rgba(black, 0.25)
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 100

  .component-editor-content
    position relative
    border-radius 3px
    background-color white
    margin 0 auto
    margin-top 40px
    width calc(100% - 80px)
    height calc(100% - 80px)

  .close-editor-btn
    position absolute
    top 30px
    right 30px
    font-size 20px
    color rgba(black, 0.8)

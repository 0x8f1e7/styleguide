$sidebar-width = 250px
$sidebar-background-color = rgba(black, 0.1)

.a0r-sidebar
	width: 100%;
	background-color: $sidebar-background-color;
	z-index: 1;

	+breakpoint("tablet")
		overflow-y: auto;
		width: $sidebar-width;
		height: 100vh;

	> .a0r-sidebar-header
		background-color: white;
		text-align: center;
		position: relative;
		height: 70px;

		+breakpoint("tablet", "max")
			box-shadow: 0 2px 6px rgba(black, 0.1);

		+breakpoint("tablet")
			overflow: hidden;

		.menu-toggle
			position: absolute;
			border: 0;
			background-color: transparent;
			right: 10px;
			top: 50%;
			transform: translateY(-50%);
			padding: 10px;

			.icon-bar
				background: #5c666f;
				display: block;
				width: 22px;
				height: 2px;
				border-radius: 1px;

				+ .icon-bar
					margin-top: 4px;

			+breakpoint("tablet")
				display: none;

		// Default header component
		
		.default-title
			display: inline-block
			margin: 0;
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			line-height: 0;

		.default-link
			display: inline-block;

			img
				display: block;
	
	> .a0r-sidebar-menu
		display: none;

		//Overwrite jquery slideToggle styles
		+breakpoint("tablet")
			display: block !important;
			height: auto !important;

		.menu-list
			list-style: none;
			margin: 0;
			padding: 0;
			z-index: 5;
			position: relative;
			background: #e3e5e7;

		.menu-item
			color: #5c666f;
			font-size: $font-size-micro;
			font-weight: $font-weight-bold;
			letter-spacing: 1px;
			text-transform: uppercase;

			&.active
				color: #333 !important;
				background: darken(#e3e5e7, 4%);

		.menu-item-link
			border-bottom: 1px solid rgba(0, 0, 0, .08);
			color: #5c666f;
			display: block;
			padding: 20px 20px 20px 20px;
			line-height: normal;

    .menu-item-icon
			margin-right: 10px;
			position: relative;
			min-width: 14px;
			display: inline-block;
			top: 0.2em;

		// If link is not active, set height to 0
		a:not(.active) + .menu-sublist
			height: 0 !important;

		.menu-sublist
			list-style: none;
			margin: 0;
			padding: 0;
			display: none;
			overflow: hidden;
			height: 0;
			transition: height 0.2s ease-in-out;

			+breakpoint("tablet")
				display: inherit;

		.menu-subitem	
			background-color: rgba(255, 255, 255, .3);
			margin: 1px 0 0 0;

			&:first-child
				margin-top: 0;

    .menu-subitem-link
			background-color: rgba(255, 255, 255, .3);
			color: inherit;
			display: block;
			padding: 10px 0 10px 40px;
			text-transform: none;
			letter-spacing: 0;

			&:hover,
			&.active
				color: $gray-dark;

			&.active
				background: rgba(black,0.01);

.a0r-sidebar {
  width: 100%;
  background-color: rgba(black, 0.1);
  z-index: 1;

  +breakpoint("tablet") {
    overflow-y: auto;
    width: 250px;
    height: 100vh;
  }
}

// Header
// ------
.a0r-sidebar .a0r-sidebar-header {
  background-color: white;
  text-align: center;
  position: relative;
  height: 70px;

  +breakpoint("tablet", "max") {
    box-shadow: 0 2px 6px rgba(black, 0.1);
  }

  +breakpoint("tablet") {
    overflow: hidden;
  }
}

// Default Logo
// ------------
.a0r-sidebar .default-title {
  display: inline-block
  margin: 0;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  line-height: 0;
}

.a0r-sidebar .default-link {
  display: inline-block;

  img {
    display: block;
  }
}

// Containers for the menu
// -----------------------
.a0r-sidebar .menu-list {
  list-style: none;
  margin: 0;
  padding: 0;
  z-index: 5;
  position: relative;
  background: #e3e5e7;
  overflow: hidden;
  transition: all .3s ease;

  +breakpoint("tablet") {
    height: auto !important;
  }

  &:not(.is-opened) {
    height: 0 !important;

    +breakpoint("tablet") {
      height: auto !important;
    }
  }
}

// Burguer Icon Button
// -------------------
.a0r-sidebar .menu-toggle {
  position: relative;
  float: right;
  margin-right: 25px;
  padding: 7px;
  width: 22px;
  background-color: transparent;
  border: 0;
  margin-top: 28px;
  margin-bottom: 28px;

  // Hide at desktop view
  +breakpoint("tablet") {
    display: none;
  }

  &:hover,
  &:focus {
    outline: 0;
  }
}

// Burguer Icon Button: Bars
.a0r-sidebar .menu-toggle .icon-bar {
  display: block;
  position: absolute;
  width: 100%;
  height: 2px;
  left: 0;
  right: 0;
  background-color: #5c666f;
  transition: .25s ease-in-out;
  border-radius: 1px;

  &:nth-of-type(2) {
    top: 0;
  }

  &:nth-of-type(3) {
    top: 50%;
    transform: translateY(-50%);
  }

  &:nth-of-type(4) {
    top: 50%;
    transform: translateY(-50%);
  }

  &:nth-of-type(5) {
    top: calc(100% - 2px);
  }
}

// Burguer Icon Button: Bars for close state
.a0r-sidebar .menu-toggle.is-close .icon-bar {
  &:nth-of-type(2) {
    top: 10px;
    width: 0%;
    left: 50%;
    opacity: 0;
  }

  &:nth-of-type(3) {
    transform: rotate(45deg);
  }

  &:nth-of-type(4) {
    transform: rotate(-45deg);
  }

  &:nth-of-type(5) {
    top: 10px;
    width: 0%;
    left: 50%;
    opacity: 0;
  }
}

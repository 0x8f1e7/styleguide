html,
body,
#app
  height 100%

body
  background-color rgba(0, 0, 0, 0.1);

.react-styleguide-sidebar
  width 300px
  background-color white
  position absolute
  top 0
  left 0
  bottom 0
  width 300px

  .sidebar-title
    text-align center
    font-size 14px
    text-transform uppercase

  .sidebar-items-list
    margin 0
    padding 0
    margin-top 50px
    list-style-type none

  .sidebar-item
    font-size 12px
    padding 10px 30px
    border-bottom 1px solid rgba(0, 0, 0, 0.05)

    &:first-child
      border-top 1px solid rgba(0, 0, 0, 0.05)

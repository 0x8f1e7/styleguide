<mjml>
  <mj-head>
    <mj-attributes>
      <mj-class name="subtitle" font-size="26px" color="#212121" padding="0 20px 15px 20px" margin="0" line-height="40" />
      <mj-text align="center" font-family="-apple-system, BlinkMacSystemFont, Roboto, sans-serif" line-height="30" font-size="16px" />
      <mj-list font-family="-apple-system, BlinkMacSystemFont, Roboto, sans-serif" line-height="30px" font-size="16px" />
      <mj-button background-color="#EB5424" font-family="-apple-system, BlinkMacSystemFont, Roboto, sans-serif" font-size="12px" color="white" font-weight="500" padding="14px 20px" />
    </mj-attributes>
  </mj-head>
  <mj-body>
    <mj-container background-color="#222228">
      <mj-section padding="20px 0 0 0">
        <mj-image width="30" src="http://cdn.auth0.com/styleguide/latest/lib/logos/img/badge.png" href="https://auth0.com/" alt="auth0" padding-bottom="20px"></mj-image>
      </mj-section>

      <mj-section background-color="white" padding="40px 30px 30px 30px">
        <mj-column width="100%" vertical-align="top" padding="0">
          <mj-text font-size="22px" padding="0 0 20px 0">Welcome to <strong style="font-weight: 500;">Auth0 App</strong>!</mj-text>
          <mj-text align="left" padding="0 0 20px 0">
            <%- msg %> You're receiving this email because you have an <strong style="font-weight: 500;">Auth0 account</strong>. If you are not sure why you’re reciving this, please contact your systems administrator.
          </mj-text>
          <mj-button>
            <span style="text-transform: uppercase; letter-spacing: 1px;">Confirm my account</spans>
          </mj-button>
          <mj-text padding="0 0 20px 0">
            Thanks,<br>
            <strong style="font-weight: 500;">Auth0 App</strong>
          </mj-text>
        </mj-column>
      </mj-section>

      <mj-section background-color="#222228"  padding="10px">
        <mj-text font-size="12px" line-height="20" color="lightgray">
          You're receiving this email because you have an <strong style="font-weight: 500;">Auth0 account</strong>. If you are not sure why you’re reciving this, please contact your systems administrator.
        </mj-text>
        <mj-spacer height="30px" />
      </mj-section>
      <mj-container>
    </mj-body>
  </mjml>

mixin header(title, img, description)
  section.jumbotron
    h2: img(src!=img || '/lib/logos/img/icon-styleguide.svg', alt!=title, width='48', height='')
    h1= title
    p= description || 'Lorem ipsum dolor sit amet, consectetur adipiscing elit quis risus eget urna mollis.'


mixin playground(height)
  .playground.js-playground
    .playground-options
      button.dark-option.is-active(name='', type='') Dark
      button.light-option(name='', type='') Light
    .playground-real-component.hide
      if block
        block
    .playground-canvas
      iframe(scrolling='no', style!='height:' + (height || '200px') + ';').playground-showcase
    ul.playground-actions
      li.is-active: a(href='#') Show code
      li: a(href='#') Copy HTML
      li: a(href='#') Copy Jade

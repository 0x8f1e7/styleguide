/*==========  Breadcrumb  ==========*/
ul.breadcrumb
  margin: 0;
  padding: 0;
  font-size: 11px;
  border-bottom: 1px solid #f1f1f1;
  padding-bottom: 10px;
  background: none;
  border-radius: 0;
  margin-bottom: 20px;
  text-transform: uppercase
  letter-spacing: 1px;

  &>li+li:before
    content: "";
    padding: 0;
    
  li
    display: inline-block
    padding: 0;
    margin: 0;
    margin-right: 10px;
    font-size: 11px;

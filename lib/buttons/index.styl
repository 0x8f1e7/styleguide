//
// Buttons
// --------------------------------------------------

.btn, a.btn
  -webkit-transition: background-color 0.2s ease;
  -moz-transition: background-color 0.2s ease;
  -ms-transition: background-color 0.2s ease;
  -o-transition: background-color 0.2s ease;
  transition: background-color 0.2s ease;
  text-transform: uppercase
  letter-spacing: 2px;
  border: 0;
  font-weight: bold
  border: 1px solid color_grey;
  padding-left: 15px;
  padding-right: 15px;
  border-radius: 3px;

  &:hover
    // background-color: color_grey;

  &.btn-none
    border: 0;
    text-transform: none
    letter-spacing: 0;
    padding-left: 20px;
    padding-right: 20px;


  &.btn-xs
    font-size: 11px;
    line-height: 12px;
    padding: 6px 15px;

  &.btn-sm
    font-size: 12px;
    line-height: 12px;
    padding: 10px 15px;

  &.btn-lg
    line-height: 30px;
    padding-left: 20px;
    padding-right: 20px;
    font-size: 15px;

  &.btn-success
    background-color: color_red;
    color: #fff;
    border-color: transparent;
    &:hover
      background-color: darken(color_red, 30%);
      color: #fff

  &.btn-default
    background: white;
    border-color: color_grey;
    &:hover
      background: color_grey;

  &.btn-danger
    border-color: transparent;

  &.btn-primary
    background-color: color_blue_light;
    border-color: transparent;
    &:hover
      background-color: darken(color_blue_light, 30%);

  &:active
    box-shadow: none;

.bg-primary, .bg-success, .bg-danger, .bg-info, .bg-warning
  font-weight: bold
  color: white;
  border-radius: 3px;
  padding: 10px 14px;
  a
    color: white;
    border-bottom: 1px solid white;
    padding-bottom: 1px;

.bg-primary
  background: color_blue;

.bg-success
  background: color_green;

.bg-warning
  background: color_yellow;

.bg-info
  background-color: color_blue_light;

.bg-danger
  background: color_red_alt;

fieldset[disabled]
  .btn
    background-color: gray !important;
    border-color: gray !important;

.help-circle
  max-height: 14px;
  max-width: 14px;
  opacity: .2;
  margin-left: 4px;
  position: relative;
  top: -2px;

  &:hover
      opacity: 1;
      
